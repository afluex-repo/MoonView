                                                                    <th>Paid Amount</th>
                                                                    <th>Payment Date</th>
                                                                    <th>Due Amount</th>
                                                                    <th>Payment Mode</th>
                                                                    <th>Txn No</th>
                                                                    <th>Txn Date</th>
                                                                    <th>Bank Name</th>
                                                                    <th>Bank Branch</th>
                                                                </tr>
                                                            </thead>
