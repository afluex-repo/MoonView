                                                                <td><input type="text" id="txttxnno @i" name="txttxnno @i"  value="@Item.BankName" /></td>
                                                                <td><input type="text" id="txttxnno @i" name="txttxnno @i"  value="@Item.BankBranch" /></td>
                                                                <td>
