@model MoonView.Models.Reports

@{
    ViewBag.Title = "RegistryReport";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("RegistryReport", "AdminReports", FormMethod.Post, new { @id = "form1" }))
{


    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Registry Report</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">

                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <p style="color:red">@TempData["RegistryReport"]</p>
                                </div>
                                <div class="card-block">
                                    <div class="row">

                                        <div class="col-md-2">
                                            <div class="form-group">
                                                Login ID
                                                @Html.TextBoxFor(m => m.LoginId, new { @class = "form-control", @Placeholder = "Search by Login ID" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                Booking Number
                                                @Html.TextBoxFor(m => m.BookingNo, new { @class = "form-control", @Placeholder = "Booking No" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                
                                                Plot Number
                                                @Html.TextBoxFor(m => m.PlotNumber, new { @class = "form-control", @Placeholder = "Plot Number" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                From Date
                                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @readonly = "ds" })
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <div class="form-group">
                                                To Date
                                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @readonly = "ds" })
                                            </div>
                                        </div>

                                        <div class="col-md-2">
                                            <div class="form-group">
                                                <br />
                                                <input class="btn btn-success" type="submit" value="Search" id="btnSearch" name="Search" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Login ID</th>
                                                    <th>Name</th>
                                                    <th>Registry Name</th>
                                                    <th>Mobile No</th>
                                                    <th>Plot Number</th>
                                                    <th>Booking Number</th>
                                                    <th>Payment Date</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstRegistry != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstRegistry)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.LoginId</td>
                                                                <td>@Item.Name</td>
                                                                <td>@Item.RegistryName</td>
                                                                <td>@Item.MobileNo</td>
                                                                <td>@Item.PlotNumber</td>
                                                                <td>@Item.BookingNo</td>
                                                                <td>@Item.PaymentDate</td>
                                                                @if (Item.Status == "R")
                                                                {

                                                                    <td>
                                                                        Registered
                                                                    </td>
                                                                }

                                                            </tr>
                                                            i++;
                                                        }
                                                    }
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Login ID</th>
                                                    <th>Name</th>
                                                    <th>Registry Name</th>
                                                    <th>Mobile No</th>
                                                    <th>Plot Number</th>
                                                    <th>Booking Number</th>
                                                    <th>Payment Date</th>
                                                    <th>Status</th>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}



<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        changeYear: true,
        changeMonth: true,
    });

</script>






