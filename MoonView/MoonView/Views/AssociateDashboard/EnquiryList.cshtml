@model MoonView.Models.Master

@{
    ViewBag.Title = "EnquiryList";
    Layout = "~/Views/Shared/AssociateLayout.cshtml";
}

 @using (Html.BeginForm("EnquiryList", "AssociateDashboard", FormMethod.Post, new { @id = "form1" }))
 {
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Enquiry Master</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5>Add New Enquiry</h5>
                                    <p style="color: red">
                                        @TempData["Enquiry"]
                                    </p>
                                    <!--<span>Add class of <code>.form-control</code> with <code>&lt;input&gt;</code> tag</span>-->
                                </div>
                                <div class="card-block">


                                    <div class="form-group row">

                                        <div class="col-sm-4">
                                            <label class="float-label">Name<span style="color:red">*</span></label>
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @Placeholder = "Name" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-4">
                                            <label class="float-label">Details<span style="color:red">*</span></label>
                                            @Html.TextAreaFor(m => m.Details, new { @class = "form-control", @Placeholder = "Details" })
                                            <span class="form-bar"></span>
                                        </div>

                                    </div>
                                    <div class="form-group row">
                                        <div class="col-md-6">
                                            @if (Model.EnquiryID == null)
                                            {
                                                <input class="btn btn-success pull-left" type="submit" onclick="return validateform();" value="Save" id="btnSave" name="btnSave" />
                                            }
                                            else
                                            {
                                                @Html.HiddenFor(m => m.EnquiryID, new { @Value = @Model.EnquiryID })
                                                <input class="btn btn-success pull-left" type="submit" onclick="return validateform();" value="Update" id="btnUpdate" name="btnUpdate" />
                                            }

                                        </div>


                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Enquiry List</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                @*<div class="card-header table-card-header">
                                    <a class="btn btn-primary btn-sm" style="margin-left:75%" href="/Master/NewsMaster">Add New</a>
                                </div>*@
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Name</th>
                                                    <th>Details</th>

                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstBlock1 != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstBlock1)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.Name</td>
                                                                <td>@Item.Details</td>

                                                            </tr>

                                                            i++;
                                                        }
                                                    }
                                                }

                                            </tbody>

                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





 }

