@model MoonView.Models.Plot

@{
    ViewBag.Title = "VisitorList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using (Html.BeginForm("VisitorList", "Admin", FormMethod.Post, new { @id = "form1" }))
{

    <p style="color: red">
        @TempData["VisitMsg"]
    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Visitor List</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <a class="btn btn-primary btn-sm" target="_blank" style="margin-left:76%" href="/Admin/VisitorForm">Add New</a>
                                </div>
                                <div class="card-block">
                                    <div class="form-group row">
                                        <div class="col-sm-3">
                                            <label class="float-label">Associate Id</label>
                                            @Html.TextBoxFor(m => m.AssociateLoginID, new { @class = "form-control", @Placeholder = "Associate Id" })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Visting From Date</label>
                                            @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control", @Placeholder = "From Date", @readonly = true })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <label class="float-label">Visting To Date</label>
                                            @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control", @Placeholder = "To Date",@readonly=true })
                                            <span class="form-bar"></span>
                                        </div>
                                        <div class="col-sm-3">
                                            <input class="btn btn-success" style="margin-top:23px;" type="submit" value="Search" id="btnSearchCustomer" name="Search" />
                                        </div>
                                    </div>
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>Site </th>
                                                    <th>Associate</th>
                                                    <td>Associate Name</td>
                                                    @*<th>Customer</th>*@
                                                    <th>Amount</th>
                                                    @*<th>Mobile</th>*@
                                                    <th>Visit Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstVistor != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstVistor)
                                                        {
                                                            <tr>
                                                                <td>@i</td>
                                                                <td>@Item.SiteName</td>
                                                                <td>@Item.AssociateLoginID</td>
                                                                <td>@Item.AssociateName</td>
                                                                @*<td>@Item.CustomerName</td>*@
                                                                <td>@Item.Amount</td>
                                                                @*<td>@Item.Mobile</td>*@
                                                                <td>@Item.VisitDate</td>
                                                                <td><a href="/Admin/PrintVisitor?Id=@Item.EncryptKey" class="btn btn-success btn-sm" target="_blank">Print</a></td>
                                                            </tr>
                                                            i++;
                                                        }


                                                    }
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                              
                                                    <th> </th>
                                                    <th></th>
                                                    <td></td>
                                                    <th style="text-align:right">Total</th>
                                                    <th>@ViewBag.Total</th>
                                                    <th></th>
                                                    <th></th>
                                                
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>



}
<script src="../vendor/jquery/jquery.min.js"></script>
<script src="~/files/bower_components/jquery/js/jquery.min.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<link rel="stylesheet" type="text/css" href="https://code.jquery.com/ui/1.12.0/themes/smoothness/jquery-ui.css">
<script>

    $('#FromDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });
    $('#ToDate').datepicker({
        dateFormat: 'dd/mm/yy',
        maxDate: 0,
        changeYear: true,
        changeMonth: true
    });

</script>