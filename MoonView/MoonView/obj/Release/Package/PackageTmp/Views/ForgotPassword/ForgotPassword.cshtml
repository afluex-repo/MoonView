    <title>Form</title>

    <style>
        .main-page1 {
            position: relative;
        }

        .main-page:before {
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-color: #002121a6;
            opacity: .95;
            content: "";
        }

        .logo img {
            max-width: 50%;
        }

        .content h1 {
            color: #fff;
            font-weight: bold;
            margin-bottom: 40px;
        }

        .content p {
            color: #fff;
        }

        .content {
            margin-top: 80px;
        }

        .main-form {
            margin-top: 80px;
            background-color: #00000061;
            padding-bottom: 50px;
        }

            .main-form h2 {
                color: #fff;
                font-weight: bold;
                margin-bottom: 40px;
                padding-top: 40px;
            }

        input#exampleInputEmail1 {
            border: 2px solid #4790b3;
            background-color: #000;
            border-left: 5px solid #4790b3;
            border-right: 5px solid #4790b3;
        }

        input#exampleInputPassword1 {
            border: 2px solid #4790b3;
            background-color: #000;
            border-left: 5px solid #4790b3;
            border-right: 5px solid #4790b3;
        }

        button.btn.btn-primary.login1 {
            padding: 5px 20px;
            font-weight: bold;
        }

        button.btn.btn-primary.get2 {
            padding: 5px 20px;
            font-weight: bold;
            margin-left: 10px;
        }

        .social-icons li a i {
            font-size: 30px;
            padding: 0px 10px;
            color: #fff;
        }

        .main-page {
            padding-bottom: 191px !important;
            padding-top: 40px;
        }

        @@media only screen and (max-width: 600px) {
            .social-icons li a i {
                font-size: 20px;
                padding: 0px 10px;
                color: #fff;
            }

            .social-icons {
                padding-top: 20px;
            }
        }

        @@media only screen and (min-width: 600px) {
            .social-icons li a i {
                font-size: 20px;
                padding: 0px 10px;
                color: #fff;
            }

            .social-icons {
                padding-top: 20px;
            }
        }

        @@media (min-width: 768px) {
            .content h1 {
                font-size: 37px;
            }
        }

        @@media (min-width: 992px) {
            .main-page {
                padding-bottom: 89px;
                padding-top: 40px;
            }
        }

        @@media (min-width: 1200px) {
            .main-page {
                padding-bottom: 89px;
                padding-top: 40px;
            }
        }
    </style>
</head>

<body>
    <div class="main-page1">
        <div class="main-page" style="background-image:url(http://images6.fanpop.com/image/photos/32800000/London-flats-for-students-real-estate-32827032-1109-765.jpg);">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-4 col-lg-4">
                        <div class="logo">
                            <img src="~/assets/img/MoonView.png" class="img-responsive" alt="logo">
                        </div>
                    </div>
                    <div class="col-md-8 col-lg-8">

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8 col-lg-8">
                        <div class="content">
                            <h1>Cost Effective & Ease of use </h1>
                            <p class="text-justify">
                                Real estate is "property consisting of land and the buildings on it,
                                along with its natural resources such as crops, minerals or water;
                                immovable property of this nature; an interest vested in this (also)
                                an item of real property, (more generally) buildings or housing in general
                            </p>

                        </div>
                    </div>
                    <div class="col-md-4 col-lg-4">
                        <div class="main-form">
                            <h2 class="text-center">Forgot Password</h2>
                            <div class="container">
                                <div class="row">
                                    <div class="col-md-12 col-lg-12">
                                        @using (Html.BeginForm("ForgotPassword", "ForgotPassword", FormMethod.Post))
                                        {
                                            <section class="login-block">

                                                <div class="container-fluid">
                                                    <div class="row">
                                                        <div class="col-sm-12">

                                                            <div class="auth-box card">
                                                                <div class="card-block">

                                                                    <div class="row" style="margin-top:20px">
                                                                        <div class="col-md-12">
                                                                            <div class="form-group">
                                                                                <label>Login Id</label>
                                                                                @Html.TextBoxFor(m => m.LoginID, new { @class = "form-control", @required = "required" })
                                                                                <span class="form-bar"></span>
                                                                                @*  <label class="float-label">Login Id</label>*@
                                                                            </div>
                                                                            <div class="form-group form-primary">
                                                                                <label>Mobile</label>
                                                                                @Html.TextBoxFor(m => m.MobileNumber, new { @class = "form-control", @required = "required", @maxlength = "10", @onkeypress = "return isNumberOrDecimal(event)" })
                                                                                <span class="form-bar"></span>
                                                                                @* <label class="float-label">Password</label>*@
                                                                            </div>
                                                                            <div class="row">
                                                                                <div class="col-md-12">

                                                                                    <div class="forgot-phone">
                                                                                        <a href="/Home/LoginWeb" class="text-right f-w-600"> Back To Login</a>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                            <div class="row" style="margin-top:5px;margin-bottom:5px;">
                                                                                <div class="col-md-12">

                                                                                    <input type="submit" id="btnGetPassword" class="btn btn-success pull-left" name="btnGetPassword" value="Get Password" style="margin-left:5px;margin-right:5px;" />
                                                                                    <p style="color: red">
                                                                                        @TempData["recoverPassword"]
                                                                                    </p>
                                                                                </div>

                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>

                                                        </div>

                                                    </div>

                                                </div>


                                            </section>
                                        }

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

</body>

</html>
<style>
    .errortext {
        border: 1px solid red !important;
        background-color: #fff0f0 !important;
    }
</style>
<script>
    $(document).ready(function () {
        $("#divload").css({ 'display': 'none' });
    });
    function validateform() {

        $(".errortext").removeClass("errortext");

        if ($('#txtLoginID').val() == '') {
            $("#txtLoginID").addClass('errortext');
            $('#txtLoginID').focus();

            return false;
        }
        if ($('#txtPassword').val() == '') {
            $("#txtPassword").addClass('errortext');
            $('#txtPassword').focus();

            return false;
        }
        $("#divload").css({ 'display': '' });


    }

    function isNumberOrDecimal(evt) {
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode != 46 && charCode > 31
          && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
</script>



