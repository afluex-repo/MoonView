@model MoonView.Models.Master

@{
    ViewBag.Title = "RowHouseSizeList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

 
@using (Html.BeginForm("NewsList", "Master", FormMethod.Post, new { @id = "form1" }))
{

    <p style="color: red">
        @TempData["House"]
    </p>
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="page-header-title">
                        <h4 class="m-b-10">Row House Size List</h4>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="page-wrapper">
                <div class="page-body">
                    <div class="row">
                        <div class="col-md-12">
                            <!-- HTML5 Export Buttons table start -->
                            <div class="card">
                                <div class="card-header table-card-header">
                                    <a class="btn btn-primary btn-sm" style="margin-left:75%" href="/Master/RowHouseSizeMaster">Add New</a>
                                </div>
                                <div class="card-block">
                                    <div class="dt-responsive table-responsive">
                                        <table id="basic-btn" class="table table-striped table-bordered nowrap">
                                            <thead>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>WidthFeet</th>
                                                    <th>WidthInch</th>
                                                    <th>HeightFeet </th>
                                                    <th>HeightInch</th>
                                                    <th>PlotArea</th>
                                                    <th>Price</th>
                                                    <th>SiteName</th>
                                                    <th>GroundFloorArea</th>
                                                    <th>FirstFloorArea</th>
                                                    <th>BookingPercentage</th>
                                                    <th>AllotmentPercentage</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @if (Model != null)
                                                {
                                                    if (Model.lstSite != null)
                                                    {
                                                        int i = 1;
                                                        foreach (var Item in Model.lstSite)
                                                        {
                                                            <tr class="text-left">
                                                                <td>@i</td>
                                                                <td>@Item.WidthFeet</td>
                                                                <td>@Item.WidthInch</td>
                                                                <td>@Item.HeightFeet</td>
                                                                <td>@Item.HeightInch</td>
                                                                <td>@Item.PlotArea</td>
                                                                <td>@Item.Price</td>     
                                                                <td>@Item.SiteName</td>
                                                                <td>@Item.GroundFloorArea</td>
                                                                <td>@Item.FirstFloorArea</td>
                                                                <td>@Item.BookingPercentage</td>
                                                                <td>@Item.AllotmentPercentage</td>
                                                              
                                                                <td>
                                                                    <a href="/Master/RowHouseSizeMaster?RowHouseSizeID=@Item.EncryptKey" class="btn btn-info btn-sm">Edit</a>
                                                                    <a href="/Master/DeleteRowHouseSize?id=@Item.RowHouseSizeID" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you wish to delete this ?');">Delete</a>
                                                                </td>

                                                            </tr>

                                                            i++;
                                                        }
                                                    }
                                                }

                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <th>S No.</th>
                                                    <th>WidthFeet</th>
                                                    <th>WidthInch</th>
                                                    <th>HeightFeet </th>
                                                    <th>HeightInch</th>
                                                    <th>PlotArea</th>
                                                    <th>Price</th>
                                                    <th>SiteName</th>
                                                    <th>GroundFloorArea</th>
                                                    <th>FirstFloorArea</th>
                                                    <th>BookingPercentage</th>
                                                    <th>AllotmentPercentage</th>
                                                    <th>Action</th>

                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





}




